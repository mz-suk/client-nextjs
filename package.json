{
  "name": "client-nextjs",
  "version": "0.1.0",
  "private": true,
  "description": "Next.js 15 + TypeScript 기반 인천 면세점 클라이언트 애플리케이션",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:prod": "NODE_ENV=production next dev --turbopack",
    "build": "next build --turbopack",
    "build:prod": "NODE_ENV=production next build --turbopack",
    "start": "next start --port 4000",
    "lint": "tsc --noEmit && eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "next": "15.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "eslint": "^9.38.0",
    "eslint-config-next": "15.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
